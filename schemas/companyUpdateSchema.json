{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The Root Schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "additionalProperties": false,
    "anyOf": [{"required": ["handle"]}, {"required": ["name"]}, {"required": ["num_employees"]}, {"required": ["description"]}, {"required": ["logo_url"]}
    ],
    "properties": {
        "handle": {
            "$id": "#/properties/handle",
            "type": "string",
            "title": "The Handle Schema",
            "description": "Company code in string formate.",
            "default": "",
            "examples": [
                "ibm"
            ]
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The Name Schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "International business machines"
            ]
        },
        "num_employees": {
            "$id": "#/properties/num_employees",
            "type": "integer",
            "title": "The Num_employees Schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [
                230000.0
            ]
        },
        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "The Description Schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "computer company"
            ]
        },
        "logo_url": {
            "$id": "#/properties/logo_url",
            "type": "string",
            "title": "The Logo_url Schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "https://image.shutterstock.com/image-vector/shield-letter-s-logosafesecureprotection-logomodern-260nw-633031571.jpg"
            ]
        }
    }
}