{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "The Root Schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "additionalProperties": false,
  "anyOf": [
    {"required": ["_token", "title"]},
    {"required": ["_token", "salary"]},
    {"required": ["_token", "equity"]},
    {"required": ["_token", "company_handle"]}
  ],
  "properties": {
      "title": {
          "$id": "#/properties/title",
          "type": "string",
          "title": "The Title Schema",
          "description": "Title column",
          "default": "",
          "examples": [
              "developer"
          ]
      },
      "salary": {
          "$id": "#/properties/salary",
          "type": "integer",
          "title": "The Salary Schema",
          "description": "An explanation about the purpose of this instance.",
          "default": 0,
          "examples": [
              500.0
          ]
      },
      "equity": {
          "$id": "#/properties/equity",
          "type": "number",
          "title": "The Equity Schema",
          "description": "Equity column",
          "default": 0,
          "minimum": 0,
          "maximum": 1,
          "examples": [
              0.6
          ]
      },
      "company_handle": {
          "$id": "#/properties/company_handle",
          "type": "string",
          "title": "The Company_handle Schema",
          "description": "Company handle column",
          "default": "",
          "examples": [
              "rithm"
          ]
      },
      "_token": {
        "$id": "#/properties/_token",
        "type": "string",
        "title": "The _token Schema",
        "description": "JWT token",
        "default": "",
        "examples": [
            "thisisatoken"
        ]
    }
  }
}