{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "The Root Schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "additionalProperties": false,
  "anyOf": [
    {"required": ["_token", "username"]},
    {"required": ["_token", "first_name"]},
    {"required": ["_token", "last_name"]},
    {"required": ["_token", "password"]},
    {"required": ["_token", "photo_url"]},
    {"required": ["_token", "email"]}
  ],
  "properties": {
      "username": {
          "$id": "#/properties/username",
          "type": "string",
          "title": "The Username Schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "joel"
          ]
      },
      "first_name": {
          "$id": "#/properties/first_name",
          "type": "string",
          "title": "The First_name Schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "Joel"
          ]
      },
      "last_name": {
          "$id": "#/properties/last_name",
          "type": "string",
          "title": "The Last_name Schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "Burton"
          ]
      },
      "password": {
        "$id": "#/properties/password",
        "type": "string",
        "title": "The Password Schema",
        "description": "An explanation about the purpose of this instance.",
        "default": "",
        "examples": [
            "secret"
        ]
    },
      "email": {
          "$id": "#/properties/email",
          "type": "string",
          "format": "email",
          "title": "The Email Schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "joel@rithm.com"
          ]
      },
      "photo_url": {
          "$id": "#/properties/photo_url",
          "type": "string",
          "title": "The Photo_url Schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "www.joel.com"
          ]
      },
      "_token": {
        "$id": "#/properties/_token",
        "type": "string",
        "title": "The _token Schema",
        "description": "JWT token",
        "default": "",
        "examples": [
            "thisisatoken"
        ]
    }
  }
}